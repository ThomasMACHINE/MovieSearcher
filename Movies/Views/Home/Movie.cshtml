@{
    ViewData["Title"] = "Movie";
}

@model Movies.Models.Movie

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">My Website</a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/">Home</a>
            </li>
        </ul>
    </div>
    <form class="form-inline my-2 my-lg-0" action="/" method="get">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Back To Search</button>
    </form>
</nav>


@if (Model != null && Model.Poster != null)
{
    <div class="card border-secondary mb-3 mx-auto">
        <div class="card-body text-white" style="background-color: black;">
            <div class="card-header bg-secondary text-white movie_view">@Model.Title</div>

            <div class="row">
                <div class="col-md-6">
                    <img src="@Model.Poster" class="card-img-top" alt="@Model.Title" style="max-width: 600px; max-height: 600px;">
                </div>
                <div class="col-md-6">
                    <div class="row">
                        <div class="col-md-6">
                            <dl>
                                <dt>Length</dt>
                                <dd>@Model.Runtime</dd>
                                <dt>IMDb Rating</dt>
                                <dd>@Model.imdbRating</dd>
                                <dt>Release Date</dt>
                                <dd>@Model.Released</dd>
                                <dt>IMDb ID</dt>
                                <dd>@Model.imdbID</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl>
                                <dt>Starring</dt>
                                <dd>@Model.Actors</dd>
                                <dt>Director</dt>
                                <dd>@Model.Director</dd>
                            </dl>
                        </div>
                        <dl>
                            <dt>Plot</dt>
                            <dd>@Model.Plot</dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>No Results Yielded, Please Search Another Movie</p>
    <div class="input_box">
        <form action="@Url.Action("Movie")" method="post">
            <div class="form-group">
                <label for="title">Movie Title</label>
                <input type="text" class="form-control" id="title" name="title" required>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

}
